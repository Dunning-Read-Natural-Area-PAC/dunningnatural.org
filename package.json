{
  "scripts": {
    "tailwind": "npx @tailwindcss/cli --input ./src/input.css --output ./assets/css/tailwind.css --config src/tailwind.config.js",
    "clean": "rimraf public/ resources/ .wrangler/",
    "prestart": "npm run clean",
    "start": "npm run tailwind && concurrently --kill-others \"hugo --environment development --buildDrafts --watch\" \"npm run tailwind -- --watch\" \"npx wrangler pages dev --ip 0.0.0.0\"",
    "prebuild": "npm run clean",
    "build": "npm run tailwind && hugo"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.0",
    "tailwindcss": "^4.1.16",
    "wrangler": "^4.45.3"
  }
}
